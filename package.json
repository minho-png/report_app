{
  "name": "dmp-platform-root",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "install:all": "npm install && npm install --prefix frontend",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:electron": "wait-on http://localhost:5173 && cross-env IS_DEV=true electron .",
    "start": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  }
}