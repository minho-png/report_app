'use client';

import React, { useState } from 'react';
import { Upload, Loader2, FileCheck, AlertCircle, LayoutDashboard, BarChart3, Settings as SettingsIcon, History } from 'lucide-react';
import { apiService } from '../services/apiService';
import { AnalysisResponse, AnalysisRequest } from '../types/report';
import DailyReportTemplate from './DailyReportTemplate';
import { generateBrandColor } from '../utils/colorUtils';

const ExcelAnalyst: React.FC = () => {
    const [isLoading, setIsLoading] = useState(false);
    const [reportData, setReportData] = useState<AnalysisResponse | null>(null);
    const [excelData, setExcelData] = useState<{ fileName: string; raw: any; mediaMix: any } | null>(null);
    const [error, setError] = useState<string | null>(null);

    const handleFileUpload = (e: React.ChangeEvent<HTMLInputElement>) => {
        const file = e.target.files?.[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = (evt) => {
            const data = {
                fileName: file.name,
                raw: { rows: [] }, // Simplified for demonstration
                mediaMix: { rows: [] }
            };
            setExcelData(data);
            setError(null);
        };
        reader.readAsArrayBuffer(file);
    };

    const runAnalysis = async () => {
        if (!excelData) return;
        setIsLoading(true);
        setError(null);
        try {
            const result = await apiService.analyze({
                raw_rows: excelData.raw.rows,
                mix_rows: excelData.mediaMix.rows,
                mappings: {
                    raw_mapping: {
                        date_col: "날짜",
                        media_col: "매체",
                        imp_col: "노출수",
                        click_col: "클릭수",
                        cost_col: "지출",
                        advertiser_col: "광고주"
                    }
                }
            });

            if (result.error) throw new Error(result.error);

            const brandColor = result.advertiser ? generateBrandColor(result.advertiser) : '#4f46e5';
            setReportData({ ...result, brandColor });
        } catch (err: any) {
            setError(err.message || "분석 중 오류가 발생했습니다.");
        } finally {
            setIsLoading(false);
        }
    };

    return (
        <div className="flex h-screen bg-[#f1f5f9] font-sans selection:bg-indigo-100 selection:text-indigo-900 overflow-hidden">
            {/* Sidebar Mockup */}
            <aside className="w-20 md:w-64 bg-slate-900 flex flex-col items-center md:items-stretch transition-all duration-300 z-50">
                <div className="p-6 flex items-center gap-3">
                    <div className="w-10 h-10 bg-indigo-500 rounded-xl flex items-center justify-center shadow-lg shadow-indigo-500/30">
                        <LayoutDashboard className="text-white" size={24} />
                    </div>
                    <span className="hidden md:block heading-outfit font-black text-xl text-white tracking-tighter">DMP PLATFORM</span>
                </div>

                <nav className="mt-8 flex-1 px-4 space-y-2">
                    {[
                        { icon: BarChart3, label: 'Analytics', active: true },
                        { icon: History, label: 'History' },
                        { icon: SettingsIcon, label: 'Settings' }
                    ].map((item, idx) => (
                        <button key={idx} className={`w-full flex items-center gap-4 px-4 py-3 rounded-xl transition-all ${item.active ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-600/20' : 'text-slate-400 hover:text-white hover:bg-slate-800'}`}>
                            <item.icon size={20} />
                            <span className="hidden md:block font-semibold text-sm">{item.label}</span>
                        </button>
                    ))}
                </nav>
            </aside>

            {/* Main Content */}
            <main className="flex-1 overflow-y-auto custom-scrollbar">
                {!reportData ? (
                    <div className="h-full flex flex-col p-6 md:p-12 items-center justify-center">
                        <div className="w-full max-w-2xl">
                            <div className="mb-12 text-center md:text-left">
                                <h2 className="heading-outfit text-4xl md:text-5xl font-black text-slate-900 tracking-tight leading-tight">
                                    Prepare your <span className="text-indigo-600 underline decoration-indigo-200 underline-offset-8">Insight</span>
                                </h2>
                                <p className="mt-4 text-slate-500 font-medium text-lg">엑셀 데이터를 업로드하여 전문적인 광고 성과 보고서를 생성하세요.</p>
                            </div>

                            <div className="glass p-8 rounded-[2rem] premium-shadow animate-in fade-in slide-in-from-bottom-5 duration-700">
                                <label className="relative group block w-full aspect-[2/1] md:aspect-[3/1] border-2 border-dashed border-slate-200 rounded-2xl hover:border-indigo-400 hover:bg-indigo-50/50 transition-all cursor-pointer overflow-hidden">
                                    <input type="file" className="hidden" onChange={handleFileUpload} accept=".xlsx,.xls" />
                                    <div className="h-full flex flex-col items-center justify-center gap-4">
                                        <div className="w-16 h-16 bg-white rounded-2xl shadow-sm border border-slate-100 flex items-center justify-center group-hover:scale-110 group-hover:shadow-xl group-hover:shadow-indigo-500/10 transition-all">
                                            {excelData ? <FileCheck className="text-green-500" size={32} /> : <Upload className="text-slate-400" size={32} />}
                                        </div>
                                        <div className="text-center">
                                            <p className="font-bold text-slate-700">{excelData ? excelData.fileName : "Drop your Excel here or click to browse"}</p>
                                            <p className="text-sm text-slate-400 mt-1">Supports XLSX, XLS (Max 50MB)</p>
                                        </div>
                                    </div>
                                </label>

                                {error && (
                                    <div className="mt-6 flex items-start gap-3 p-4 bg-red-50 text-red-600 rounded-xl border border-red-100 animate-in shake duration-500">
                                        <AlertCircle size={20} className="shrink-0 mt-0.5" />
                                        <p className="text-sm font-semibold">{error}</p>
                                    </div>
                                )}

                                <button
                                    onClick={runAnalysis}
                                    disabled={isLoading || !excelData}
                                    className="w-full mt-8 py-5 bg-slate-900 text-white rounded-2xl font-black text-lg tracking-tight hover:bg-slate-800 disabled:bg-slate-200 disabled:text-slate-400 shadow-2xl shadow-slate-900/20 active:scale-[0.98] transition-all flex items-center justify-center gap-3 overflow-hidden relative"
                                >
                                    {isLoading ? (
                                        <>
                                            <Loader2 className="animate-spin" size={24} />
                                            <span>Analyzing metrics...</span>
                                            <div className="absolute inset-0 bg-white/10 animate-pulse"></div>
                                        </>
                                    ) : (
                                        <span>Start Real-time Analysis</span>
                                    )}
                                </button>
                            </div>
                        </div>
                    </div>
                ) : (
                    <div className="p-4 md:p-8 animate-in fade-in zoom-in-95 duration-500">
                        <DailyReportTemplate
                            data={reportData}
                            campaignName={excelData?.fileName.split('.')[0] || "Campaign Report"}
                            insightText={reportData.insight || ""}
                            brandColor={reportData.brandColor}
                        />
                        <button
                            onClick={() => setReportData(null)}
                            className="fixed bottom-8 right-8 bg-white/80 backdrop-blur-md text-slate-600 px-6 py-3 rounded-full font-bold shadow-2xl border border-slate-200 hover:bg-white hover:text-indigo-600 transition-all z-[100]"
                        >
                            ← Back to Dashboard
                        </button>
                    </div>
                )}
            </main>
        </div>
    );
};

export default ExcelAnalyst;
